# GigaChat Bot Configuration Example
# Rename this file to secrets.yaml and fill in your actual values

# Telegram Bot API Key (get it from @BotFather)
telegram_bot_api_key: "YOUR_BOT_TOKEN_HERE"

# Allowed Telegram Chat IDs (list of integers)
# You can get your chat ID by sending a message to @userinfobot
telegram_allowed_chat_ids:
  - 123456789
  - -987654321  # Group chat IDs start with minus

# GigaChat Authorization Key (Base64 encoded client_id:client_secret)
# Format: base64(client_id:client_secret)
gigachat_authorization_key: "YOUR_BASE64_ENCODED_KEY_HERE"

# Verify SSL settings
# Set to false if you experience SSL certificate issues
verify_ssl: false
